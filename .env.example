# Coupzii Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# Database
DATABASE_URL=postgresql://admin:password@localhost:5432/coupzii
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coupzii
DB_USER=admin
DB_PASSWORD=your_secure_password

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=coupzii-uploads
S3_BUCKET_REGION=us-east-1

# Payment Gateways
# Razorpay (India)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Stripe (International)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# AI Services
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Google Cloud (for Speech-to-Text)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# SMS/OTP Service
# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Alternative: MSG91 (India)
MSG91_AUTH_KEY=your_msg91_key
MSG91_SENDER_ID=COUPZI

# Email Service
# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
FROM_EMAIL=noreply@coupzii.com
SUPPORT_EMAIL=support@coupzii.com

# Alternative: AWS SES
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@coupzii.com

# Monitoring & Logging
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# CORS
CORS_ORIGIN=http://localhost:8080,https://coupzii.com

# Session
SESSION_SECRET=your-session-secret

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags
ENABLE_AUTO_SYNC=false
ENABLE_AI_ASSISTANT=true
ENABLE_VOICE_COMMANDS=false
ENABLE_MARKETPLACE=true

# Third-party Integrations
# Firebase (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Admin
ADMIN_EMAIL=admin@coupzii.com
ADMIN_PASSWORD=change-this-password

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=30
